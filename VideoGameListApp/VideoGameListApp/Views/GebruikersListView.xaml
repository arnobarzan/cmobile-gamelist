<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VideoGameListApp.Views.GebruikersListView">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding AlleGebruikers}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Naam}"
                                   Detail="{Binding Voornaam}"
                                   ></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>